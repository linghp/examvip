<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    >

    <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="48dp"
  			android:id="@+id/title" 
  			android:background="@color/f_title_bg"
  			android:gravity="center_vertical"  >  
  			
        	<ImageView 
              android:id="@+id/img_back"
              android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:src="@drawable/icon_back"
			    android:paddingLeft="8dp" 
              />
			<TextView  
 			    android:layout_width="wrap_content"  
        		android:layout_height="wrap_content" 
        		android:text="评分"
        		android:textSize="18sp"
        		android:layout_centerInParent="true"
				android:textColor="@android:color/white"
			    />
		</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/rl_up"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/title"
	    android:background="@drawable/icon_result_bg" >
    
  <TextView
        android:id="@+id/tx_testresult_tiltle"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="国家公务员考试" />

    


  <TextView
      android:id="@+id/tx_testresult_score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tx_testresult_tiltle"
      android:layout_centerHorizontal="true"
      android:textSize="22sp"
      android:textStyle="bold"
      android:text="您的得分：102分" />

  <TextView
      android:id="@+id/tx_testresult_totalscore"
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tx_testresult_score"
      android:layout_centerHorizontal="true"
      android:textColor="@color/red"
      android:text="（试卷总分135分）" />

 <LinearLayout android:id="@+id/ll_resultinfo"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tx_testresult_totalscore"
      android:padding="30dp"
      android:orientation="vertical"
      android:gravity="center"
      >
  <TextView
      android:id="@+id/tx_testresult_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/red"
      android:text="考试用时：1小时23分26秒" />

  <TextView
      android:id="@+id/tx_testresult_totalcount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/red"
      android:text="题目总数：共135道（）" />
  <TextView
      android:id="@+id/tx_testresult_percent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/red"
      android:text="正确率：70%（答对70道，答错30道）" />
  </LinearLayout> 
 
 
 
  <Button
      android:id="@+id/btn_view_desc"
      android:layout_margin="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/ll_resultinfo"
      android:layout_marginTop="22dp"
      android:background="@drawable/btn_style_blue"
      android:text="查看答案及解析" />



</RelativeLayout>	

</RelativeLayout>
