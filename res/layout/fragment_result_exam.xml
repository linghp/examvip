  <ImageView
      android:id="@+id/img_line"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tx_testresult_tiltle"
      android:layout_centerHorizontal="true"
      android:src="@drawable/list_line" />

  <TextView
      android:id="@+id/tx_testresult_score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/img_line"
      android:layout_centerHorizontal="true"
      android:textSize="22sp"
      android:textStyle="bold"
      android:text="您的得分：102分" />

  <TextView
      android:id="@+id/tx_testresult_totalscore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tx_testresult_score"
      android:layout_centerHorizontal="true"
      android:textColor="@color/red"
      android:text="（试卷总分135分）" />

 <RelativeLayout
      android:id="@+id/rl_resultinfo"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tx_testresult_totalscore"
      android:padding="20dp"
      >
  <TextView
      android:id="@+id/tx_testresult_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:textColor="@color/red"
      android:text="考试用时：1小时23分26秒" />

  <TextView
      android:id="@+id/tx_testresult_totalcount"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/tx_testresult_time"
      android:textColor="@color/red"
      android:text="题目总数：共135道（主观题35道，客观题100道）" />
  <TextView
      android:id="@+id/tx_testresult_percent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
       android:layout_below="@+id/tx_testresult_totalcount"
      android:textColor="@color/red"
      android:text="正确率：70%（答对70道，答错30道）" />
  </RelativeLayout> 

  <Button
      android:id="@+id/btn_view_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/rl_resultinfo"
      android:layout_marginTop="22dp"
      android:text="查看答案及解析" />

</RelativeLayout>
