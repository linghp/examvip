<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/mm_listitem"
             >
          
            <TextView
                android:id="@+id/txt_paper_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textSize="18sp"
                android:text="语言类"
                android:textColor="#000" />
             <TextView
                  android:id="@+id/txt_paper_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_paper_title"
              
                android:padding="7dp"
                android:textSize="14sp"
                android:text="共444444套试卷"
                android:textColor="#666" />

                   <TextView
                       android:id="@+id/txt_paper_adddate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@+id/txt_paper_year"
                       android:layout_toRightOf="@+id/txt_paper_year"
                       android:padding="7dp"
                       android:text="更新时间:2013-9-29"
                       android:textColor="#666"
                       android:textSize="12sp" />

                   <ImageView  
                       android:id="@+id/img_del"
                       android:layout_width="wrap_content"
                       android:layout_height="fill_parent"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentBottom="true"
                       android:paddingTop="12dp"
                       android:paddingLeft="24dp"
                       android:src="@drawable/icon_del" />
             
        </RelativeLayout>
