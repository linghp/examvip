<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <TextView
                        android:id="@+id/txt_viewtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="viewtitle"
                        android:textColor="@color/gree_deep"
                        android:textSize="18sp"
                        android:padding="5.0dip"
                        android:gravity="right"
                        android:text="查看材料" />
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                  

                    <com.cqvip.mobilevers.widget.ImageTextView
                        android:id="@+id/txt_exam_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="下列说法正确的是？"
                        android:textColor="@color/black"
                        android:textSize="17.0sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/list_line" />

                         <EditText
                        android:id="@+id/et_answer"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:gravity="left|top"
                        android:hint="请写下您的答案"
                        android:textColor="@color/black"
                         />
                 

                    <LinearLayout
                        android:id="@+id/mulitiple_chose_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                       
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/decision"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您的答案:"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/user_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1.0dip"
                            android:layout_weight="1.0" />

                        <ImageView
                            android:id="@+id/answer_ico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/eg_correct_answer_ico" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1.0dip"
                            android:layout_weight="1.0" />

                        <TextView
                            android:id="@+id/tx_cue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="恭喜您，答对了"
                            android:textColor="@color/black" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1.0dip"
                            android:layout_weight="1.0" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/decision2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="答案："
                            android:textColor="@color/black" />

                        <com.cqvip.mobilevers.widget.ImageTextView
                            android:id="@+id/correct_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/decision3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="解析："
                            android:textColor="@color/black" />

                        <com.cqvip.mobilevers.widget.ImageTextView
                            android:id="@+id/anser_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="gone" >


                    <com.cqvip.mobilevers.widget.ImageTextView
                        android:id="@+id/sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一下材料说明"
                        android:textColor="@color/black"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>