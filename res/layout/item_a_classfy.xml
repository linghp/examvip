<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:background="@drawable/mm_listitem"
          	
             >
            <ImageView
                android:id="@+id/img_aclassfy_book"
                android:layout_width="48dp"
		        android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                />

            <TextView
                android:id="@+id/txt_aclassfy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_aclassfy_book"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:textSize="22sp"
                android:text="语言类"
                android:textColor="#000000" />
      
            <TextView
                android:id="@+id/tx_aclassfy_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="共44444套"
                android:drawableRight="@drawable/action_arrow"
                android:textColor="#666"
                android:textSize="16sp" />
        </RelativeLayout>
