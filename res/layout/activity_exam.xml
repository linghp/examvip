<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exam_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_color"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/top_rl"
            android:layout_width="fill_parent"
            android:layout_height="59dp"
            android:layout_weight="0.03"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/examtop_padding" >

            <ImageView
                android:id="@+id/left_iv"
                android:layout_width="@dimen/examtop_imageviewsize"
                android:layout_height="@dimen/examtop_imageviewsize"
                android:src="@drawable/DeepBlue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/examtop_margininner"
                android:layout_weight="1"
                android:background="@color/transparent" >

                <LinearLayout
                    android:id="@+id/lookanswer_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/lookanswer_iv"
                        android:layout_width="@dimen/examtop_imageviewsize"
                        android:layout_height="@dimen/examtop_imageviewsize"
                        android:src="@drawable/DeepBlue" />

                    <TextView
                        android:id="@+id/tv_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看答案"
                        android:textSize="@dimen/examtop_fontsize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/answercard_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/examtop_margininner"
                    android:background="@color/transparent"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/examtop_imageviewsize"
                        android:layout_height="@dimen/examtop_imageviewsize"
                        android:src="@drawable/DeepBlue" />

                    <TextView
                        android:id="@+id/tv_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="答题卡"
                        android:textSize="@dimen/examtop_fontsize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/handpaper_ll"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/examtop_margininner"
                    android:background="@color/transparent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/examtop_imageviewsize"
                        android:layout_height="@dimen/examtop_imageviewsize"
                        android:src="@drawable/DeepBlue" />

                    <TextView
                        android:id="@+id/tv_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交卷"
                        android:textSize="@dimen/examtop_fontsize" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/directory_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/examtop_margininner"
                android:background="@color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10|100" />

                <ImageView
                    android:layout_width="@dimen/examtop_imageviewsize"
                    android:layout_height="@dimen/examtop_imageviewsize"
                    android:layout_marginLeft="@dimen/examtop_margininner"
                    android:src="@drawable/DeepBlue" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
 android:layout_margin="2dp"
            android:layout_weight="0"
            android:background="@color/transparent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/goto_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/DeepBlue"
                android:gravity="center"
                android:padding="8dp"
                android:text="last"
                android:textColor="?attr/text_color" >
            </Button>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="?attr/text_color" />

            <Button
                android:id="@+id/goto_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/DeepBlue"
                android:gravity="center"
                android:padding="8dp"
                android:text="next"
                android:textColor="?attr/text_color" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>