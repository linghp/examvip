<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MMTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:background">@drawable/bg_checkbox_menus</item>
        <item name="android:gravity">center</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:button">@null</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:paddingTop">4.0dip</item>
		
    </style>
    
    	<!-- 默认风格 -->
	<style name="ThemeDefault" parent="AppTheme">
        <item name="bg_color">@color/white</item>
        <item name="bg_answer_color">@color/yellow_onexam_anwerdesc</item>
        <item name="android:textColor">@color/black</item>
        <item name="bg_exambottom_color">@color/blue_bottom_bar</item>
        <item name="bg_examtitle_color">@color/f_title_bg</item>
	</style>
	<!-- 夜间模式 -->
	<style name="ThemeNight" parent="AppTheme">		
        <item name="bg_color">@color/black</item>
        <item name="bg_answer_color">@color/grey_answer</item>
        <item name="android:textColor">@color/examnightcolor</item>
        <item name="bg_exambottom_color">@color/blue_bottom_bar_night</item>
        <item name="bg_examtitle_color">@color/f_title_bg_night</item>
	</style>
    
     <style name="drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="drop_down_list_footer_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
    </style>
      <style name="drop_down_list_header_font_style">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="drop_down_list_header_second_font_style">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="drop_down_list_footer_font_style">
         <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
        <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
     <style name="RadioButton">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:button">@drawable/eg_radio_big</item>
    </style>
    
      <style name="common_button">
        <item name="android:textColor">@color/fontclcor</item>
    </style>
    
</resources>
